
<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>Rich Marker</title>

  <%= stylesheet_link_tag    "application" %>

  <style type="text/css">
      .map-container {
          width: 600px;
          height: 400px;
          float: left;
          margin: 0 5px;
      }
      .my-marker {
          background: red;
          border: 2px solid #fff;
          padding: 3px;
      }

      .my-other-marker {

          border: 2px solid #fff;

          color: white;
      }

      .my-other-marker a svg{
          height: 60px;
          width: 35px;
      }

      #log {
          clear: both;
      }

      #content {
          padding-left: 5px;
      }

      #marker-content {
          width: 350px;
          height: 150px;
      }

  </style>

  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <script type="text/javascript" src="/assets/richmarker.js"></script>

  <%= javascript_include_tag "application" %>

  <script type="text/javascript" src="/assets/test_map.js"></script>

</head>
<body>
<%= render partial: 'partials/modal_order_form_checkbox' %>
<% if params[:controller] == 'appartments' && params[:action] == 'item' && !@appartment_images.nil? && @appartment_images.count > 0 %>
    <%= render partial: 'appartments/modal_large_image_checkbox' %>
<% end %>
<div id="body-inner">
  <div id="wrap">

    <div id="main">
      <%= render partial: 'partials/header' %>
      <div id="content">
        <%= yield %>
      </div>
    </div>

  </div>

  <%= render partial: 'partials/footer' %>


</div>




<%= render partial: 'partials/load_disqus' %>

<%= render partial: 'partials/modal_order_form_large_jquery' %>

<% if params[:controller] == 'appartments' && params[:action] == 'item' && !@appartment_images.nil? && @appartment_images.count > 0 %>
    <%# render partial: 'appartments/modal_large_image' %>
    <%= render partial: 'appartments/modal_large_image_version2' %>
<% end %>




</body>
</html>
