@import "_config"
$desktop-primary-header-background: #3e414a
$desktop-primary-header-height: 29px
$desktop-primary-header-line-height: 29px
$desktop-primary-header-text-font-size: 0.8rem
$desktop-primary-header-text-color: white

$desktop-secondary-header-background: #2e3138

$desktop-secondary-header-text-color: white

$desktop-secondary-header-menu-item-height: 36px
$desktop-secondary-header-menu-item-color: white

.toggle-image
  svg
    opacity: 1

    -webkit-transition-property: opacity
    -moz-transition-property: opacity
    -o-transition-property: opacity
    transition-property: opacity

    -webkit-transition-duration: 0.4s
    -moz-transition-duration: 0.4s
    -o-transition-duration: 0.4s
    transition-duration: 0.4s


  svg.active
    opacity: 0

  &.active, &:hover
    svg.active
      opacity: 1

    svg.inactive
      opacity: 0


#desktop-header
  #primary-header
    background: $desktop-primary-header-background
    height: $desktop-primary-header-height
    line-height: $desktop-primary-header-line-height
    //background-color: red


  #address
    font-size: $desktop-primary-header-text-font-size
    color: $desktop-primary-header-text-color

  #languages-bar
    ul
      li
        list-style: none
        display: inline-block
        padding-right: 10px
        padding-top: 2px

        .image
          width: 25px
          height: 25px

          //background-image: url( <%#  asset_path('static_images/facebook.jpg') %> )


          display: block
          position: relative


          svg
            width: 25px
            height: 25px
            position: absolute
            top: 0
            left: 0

            -webkit-transition-property: all
            -moz-transition-property: all
            -o-transition-property: all
            transition-property: all

            -webkit-transition-duration: 0.4s
            -moz-transition-duration: 0.4s
            -o-transition-duration: 0.4s
            transition-duration: 0.4s

          svg.active
            //display: none
            opacity: 0

        & .image:hover, &.active .image
          svg.active
            //display: block
            opacity: 1

          svg.inactive
            //display: none
            opacity: 0




  #primary-header-menu
    ul
      li
        list-style: none
        display: inline-block
        height: $desktop-primary-header-height
        line-height: $desktop-primary-header-line-height



        .title
          padding-left: 15px
          padding-right: 15px

          display: block

          height: $desktop-primary-header-height
          line-height: $desktop-primary-header-line-height

          font-size: $desktop-primary-header-text-font-size
          color: $desktop-primary-header-text-color


          &:hover
            background-color: $pink-color

        &.active
          .title
            background-color: $pink-color



  #social-links-bar
    ul
      padding-right: 6rem
      padding-left: 3rem

      li
        list-style: none
        display: inline-block

        padding-right: 10px
        padding-top: 2px

        &:last-child
          padding-right: 0

        .toggle-image
          width: 25px
          height: 25px
          //background-image: url( <%= asset_path('static_images/facebook.jpg') %> )
          display: block
          position: relative

          svg
            width: 25px
            height: 25px
            position: absolute
            top: 0
            left: 0



  #secondary-header
    background: $desktop-secondary-header-background
    height: 90px

    #phones
      ul
        li
          list-style: none

          .phone
            color: $desktop-secondary-header-text-color
            font: $visual-h1-font


    #secondary-header-menu

      ul
        li
          list-style: none
          display: inline-block

          .title
            font: $visual-h3-font
            //line-height: $desktop-secondary-header-menu-item-height
            height: $desktop-secondary-header-menu-item-height
            display: block
            padding-right: 15px
            padding-left: 15px
            color: $desktop-secondary-header-menu-item-color
